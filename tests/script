# vi: set syntax=sh :
config() {
	wget -q -O - "http://config/$*" || exit 1
}

echo "Start with an older release... (doesn't require download from GUI)"
config sleep=0
0launch -gv

config sleep=4
echo "Switch to local version"
mkdir -p ~/.config/0install.net/injector/local_interfaces
cat > ~/.config/0install.net/injector/local_interfaces/http%3a%2f%2f0install.net%2f2005%2finterfaces%2finjector-gui << EOF
<?xml version='1.0'?>
<interface xmlns='http://zero-install.sourceforge.net/2004/injector/interface'
	   uri='http://0install.net/2005/interfaces/injector-gui'
	   last-modified='1112196678'>
   <implementation version='99' id='$TESTS/..' stability='stable'/>
</interface>
EOF
echo Run
0launch -grv
echo Done
